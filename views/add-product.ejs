<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="#">
                <h2>Mirabelle</h2>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/product">Produits <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/provider">Fournisseurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Nous contacter</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="vertical-center">
        <section class="add-product container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-10">
                    <div class="card text-center">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link active" id="add-tab" data-toggle="tab" href="#add" role="tab"
                                        aria-controls="add" aria-selected="true">Ajouter</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link" id="show-tab" data-toggle="tab" href="#show" role="tab"
                                        aria-controls="show" aria-selected="false">Visualiser</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="add" role="tabpanel"
                                    aria-labelledby="add-tab">
                                    <h1>Ajouter</h1>
                                    <div class="row d-flex justify-content-center">
                                        <div class="mr-4 triangle" id="product-breadcump">Produit</div>
                                        <div class="mr-4 triangle2" id="provider-breadcump">Fournisseur</div>
                                        <div class="triangle2" id="summary-breadcump">Synthèse</div>
                                    </div>
                                    <hr class="ym-4" />
                                    <% if(step === 'product'){%>
                                    <form method="post" action="/product" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label for="title">Titre</label>
                                            <input type="text" class="form-control" id="title" name="title" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="desc">Description</label>
                                            <textarea rows="10" class="form-control" id="desc" name="desc"
                                                required></textarea>
                                        </div>
                                        <div class="form-group">
                                            <input type="file" name="files" id="files" class="form-control" multiple/>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Valider</button>
                                        <button class="btn btn-primary" id="preview">Aperçu</button>
                                    </form>
                                    <%}%>
                                    <% if(step === 'provider'){%>
                                    <div class="form-group">
                                        <h1>Choisir un fournisseur existant</h1>
                                        <label for="provider">Fournisseur</label>
                                        <select class="form-control" id="provider" name="provider">
                                            <option selected>Choisir un Fournisseur...</option>
                                            <% 
                                            providers.forEach(provider => {
                                                %><option value="<%=provider._id%>"><%=provider.name%></option>
                                            <%});%>
                                        </select>
                                    </div>
                                    <hr class="ym-4" />
                                    <h1>Créer un fournisseur</h1>
                                    <form method="post" action="/summary">
                                        <div class="form-group">
                                            <label for="title">Nom</label>
                                            <input type="text" class="form-control" id="name" name="name" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="desc">Description</label>
                                            <textarea rows="10" class="form-control" id="desc" name="desc"
                                                required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Valider</button>
                                    </form>
                                    <%}%>
                                    <% if(step === 'summary'){%>
                                    <p>
                                        <img src="/img/halo1.jpg" alt="created product image" class="img-thumbnail">
                                    <h1><%=productCreation.product.title%></h1>
                                    <p><%=productCreation.product.desc%></p>
                                    <p class="provider-info">Fournisseur : <%=productCreation.provider.name%></p>
                                    </p>
                                    <div>
                                        <form>
                                            <button type="submit" class="btn btn-primary">Valider</button>
                                        </form>
                                    </div>
                                    <%}%>
                                    
                                </div>
                                <div class="tab-pane fade" id="show" role="tabpanel" aria-labelledby="show-tab">
                                    <h1>Mes produits à la vente</h1>
                                    <hr class="ym-4" />
                                    <form method="get" action="/search">
                                        <div class="form-group">
                                            <label for="search">Rechercher</label>
                                            <input type="text" class="form-control" id="search" name="search">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Rechercher</button>
                                    </form>
                                    <div class="row">
                                        <div class="col-4">
                                            <div class="card mb-4 shadow p-3 mb-5 bg-white rounded"
                                                style="width: 18rem;">
                                                <img src="/img/halo1.jpg" class="card-img-top" alt="...">
                                                <div class="card-body">
                                                    <h5 class="card-title">Card title</h5>
                                                    <p class="card-text">Some quick example text to build on the card
                                                        title
                                                        and
                                                        make up the bulk of the card's content.</p>
                                                    <hr />
