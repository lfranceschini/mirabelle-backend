                                                    <hr />
                                                    <a href="#" class="float-right">Supprimer</a>
                                                    <a href="#" class="float-left">Détails</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script type="text/javascript">
        let productBreadcump = document.getElementById('product-breadcump');
        let providerBreadcump = document.getElementById('provider-breadcump');
        let summaryBreadcump = document.getElementById('summary-breadcump');

        let updateTriangleClass = (element, classToAdd, classToRemove) => {
            element.classList.remove(classToRemove);
            element.classList.add(classToAdd);
        };

        let step = "<%= step %>";
        switch (step) {
            case 'product':
                updateTriangleClass(productBreadcump, 'triangle', 'triangle2');
                updateTriangleClass(providerBreadcump, 'triangle2', 'triangle');
                updateTriangleClass(summaryBreadcump, 'triangle2', 'triangle');
                break;
            case 'provider':
                updateTriangleClass(productBreadcump, 'triangle2', 'triangle');
                updateTriangleClass(providerBreadcump, 'triangle', 'triangle2');
                updateTriangleClass(summaryBreadcump, 'triangle2', 'triangle');
                break;
            case 'summary':
                updateTriangleClass(productBreadcump, 'triangle2', 'triangle');
                updateTriangleClass(providerBreadcump, 'triangle2', 'triangle');
                updateTriangleClass(summaryBreadcump, 'triangle', 'triangle2');
                break;
        }

    </script>
